<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textAppearance="?attr/textAppearanceHeadline4"
        tools:text="Question text goes here" />

    <LinearLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <Button
            android:id="@+id/option1_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 1"
            style="@style/OptionButtonStyle" />

        <Button
            android:id="@+id/option2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Option 2"
            style="@style/OptionButtonStyle" />

        <Button
            android:id="@+id/option3_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Option 3"
            style="@style/OptionButtonStyle" />

        <Button
            android:id="@+id/option4_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Option 4"
            style="@style/OptionButtonStyle" />
    </LinearLayout>

    <Button
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Skip"
        style="@style/OptionButtonStyle"
        android:padding="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/question_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        tools:text="Question 2/7" />
</LinearLayout>